name: CI Server (Python with Coverage + SonarCloud)

on:
  push:
    branches:
      - main
  pull_request:

jobs:
  build-test-coverage:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies and testing tools
        run: |
          python -m pip install --upgrade pip
          if [ -f requirements.txt ]; then pip install -r requirements.txt; fi
          python -m pip install pytest pytest-cov

      - name: Check syntax
        run: |
          find . -type f -name "*.py" -exec python -m py_compile {} +

      - name: Run unit tests with coverage
        run: |
          python -m pytest --cov=src --cov-report=xml --cov-report=term-missing -v

      - name: SonarCloud Scan
        uses: SonarSource/sonarcloud-github-action@v2
        with:
          projectKey: my-python-project
          organization: my-org
          token: ${{ secrets.SONAR_TOKEN }}
          extraProperties: |
            sonar.python.coverage.reportPaths=coverage.xml
